{
  "name": "slasshy-browser-sidecar",
  "version": "1.0.0",
  "description": "Secure Browser Engine for Slasshy OmniDownloader - Electron Sidecar with Custom Incognito Mode",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win --dir",
    "build-win-portable": "electron-builder --win portable",
    "build": "electron-builder"
  },
  "keywords": [
    "electron",
    "browser",
    "sidecar",
    "incognito",
    "secure-download"
  ],
  "author": "Slasshy",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.slasshy.browser-sidecar",
    "productName": "Slasshy Secure Browser",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "extensions",
        "to": "extensions",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}